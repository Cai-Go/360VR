<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_01"
    android:id="@+id/cardview"
    app:cardCornerRadius="@dimen/main_04"
    app:cardElevation="@dimen/main_03">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_heightPercent="60%" />

        <TextView
            android:gravity="center"
            android:textSize="@dimen/textSize_01"
            android:id="@+id/item_tetxView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/item_imageView"
            android:textColor="@color/transparent90_white"
            app:layout_heightPercent="40%" />
    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>